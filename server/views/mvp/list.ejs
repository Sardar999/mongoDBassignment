<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
<!-- Main Content -->
<main>
    <div class="container">
    <div class="row">
    <div class="col-md-offset-3 col-md-10">
        <h1><%= title %></h1>
        <a href="/mvp-list/add" class="btn btn-primary" role="button">
            <i class="fas fa-plus-circle"></i> Add a Player </a>
        <br>
        <br>
        <table class="table table-bordered table-striped table-hover">
        <tr class="d-flex">
            <th class="text-center col-2">Name</th>
            <th class="text-center col-2">Age</th>
            <th class="text-center col-1">Team</th>
            <th class="text-center col-6">Championships</th>
            <th class="text-center col-1">History</th>
        </tr>
        <!-- Repeat the template -->
        <% for(let count=0; count < MVPList.length; count++) { %>
            <tr class="d-flex">
            <td class="text-center col-2"><%= MVPList[count].name %></td>
            <td class="text-center col-2"><%= MVPList[count].age %></td>
            <td class="text-center col-1"><%= MVPList[count].team %></td>
            <td class="text-center col-6"><%= MVPList[count].championships %></td>
            <td class="text-center col-1"><%= MVPList[count].history %></td>
            <td class="text-center col-1">
                <a href="/mvp-list/edit/<%= MVPList[count]._id %>"
                    class="btn btn-primary">
                    <i class="fas fa-pencil-alt"></i> Edit </a>
            </td>
            <td class="text-center col-1">
                <a href="/mvp-list/delete/<%= MVPList[count]._id %>"
                    class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete </a>
            </td>
            </tr>

        <% } %>
        </table>
    </div>
    </div>
</main>
<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>