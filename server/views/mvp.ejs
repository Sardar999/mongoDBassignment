<%- include partials/header.ejs %>
<%- include partials/main_nav.ejs %>
<!-- Main Content -->
<main>
    <div class="container">
    <div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h1><%= title %></h1>
        <br>
        <table class="table table-bordered table-striped table-hover">
        <tr class="d-flex">
            <th class="text-center col-2">Name</th>
            <th class="text-center col-2">Age</th>
            <th class="text-center col-2">Team</th>
            <th class="text-center col-6">Championships</th>
            <th class="text-center col-2">History</th>
        </tr>
        <!-- Repeat the template -->

        <% for(let count=0; count < MVPAward.length; count++) { %>
            <tr>
            <td class="text-center"><% MVPAward[count].name %></td>
            <td class="text-center"><% MVPAward[count].age %></td>
            <td class="text-center"><% MVPAward[count].team %></td>
            <td class="text-center"><% MVPAward[count].championships %></td>
            <td class="text-center"><% MVPAward[count].history %></td>
            </tr>

        <% } %>
        </table>
    </div>
    </div>
</main>
<%- include partials/bottom_nav.ejs %>
<%- include partials/footer.ejs %>